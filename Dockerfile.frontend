FROM node:18-alpine

# 작업 디렉토리 설정
WORKDIR /app

# package.json과 package-lock.json 복사
COPY package*.json ./

# 의존성 설치
RUN npm ci --only=production

# 소스 코드 복사
COPY . .

# 프론트엔드 빌드
RUN npm run build

# 빌드 결과물을 nginx에서 사용할 수 있도록 복사
RUN cp -r dist/* /usr/share/nginx/html/

# 포트 3000 노출 (개발용)
EXPOSE 3000

# 개발 서버 실행 (선택사항)
CMD ["npm", "run", "dev"]
